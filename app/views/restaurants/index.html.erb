<div class="container text-center">
  <h1>Welcome to the restaurant list</h1>

  <h4><%= link_to "Add A Restaurant", new_restaurant_path %></h4>
</div>
<hr>

<div class="container text-center">
  <div class="row">
    <div class="col-xs-12">
      <% @restaurants.each do |restaurant| %>
        </h3> <%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
        <p>Address: <%= restaurant.address %></p>
        <p>Phone Number: <%= restaurant.phone_number %></p>
        <p>Cuisine: <%= restaurant.category.capitalize %></p>

        <p><%= link_to "Edit", edit_restaurant_path(restaurant) %></p>
        <p><%= link_to "Delete", restaurant_path(restaurant), method: :delete %></p>
        <p><%= link_to "Add A Review", new_restaurant_review_path(restaurant) %></p>

        <hr>
      <% end %>
    </div>
  </div>
</div>

