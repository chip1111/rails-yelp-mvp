<div class="container text-center padded">
 <div class="row">
   <div class="col-xs-12 col-sm-offset-4 col-sm-4">
     <h2>Add a Review:</h2>
   </div>
 </div>
</div>
<div class="container text-center">
 <div class="row">
   <div class="col-xs-12 col-sm-offset-4 col-sm-4">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: [1, 2, 3, 4, 5] %>
      <%= f.submit "add a review", class: "btn btn-info" %>
    <% end %>
    <p class="padded"><%= link_to "Back to Home", restaurants_path %></p>
   </div>
 </div>
</div>
