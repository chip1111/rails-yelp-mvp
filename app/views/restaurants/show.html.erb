<div class="extra-background">
  <div class="container text-center padded">
   <div class="row">
     <div class="col-xs-12 col-sm-offset-2 col-sm-4 card restaurant-card">
      <h2><%= @restaurant.name %></h2>

      <p>Cuisine: <%= @restaurant.category %></p>

      <p>Address</p>
      <p><%= @restaurant.address %></p>

      <p>Phone Number: <%= @restaurant.phone_number %></p>
     </div>
     <div class="col-xs-12 col-sm-4 card reviews-card">
      <h2>Reviews</h2>
      <% @restaurant.reviews.each do |review| %>
      <p><%= review.content %> - <%= "*" * review.rating %></p>
      <% end %>
     </div>
   </div>
  </div>


  <div class="container text-center card links-card">
   <div class="row">
     <div class="col-xs-12 col-sm-offset-4 col-sm-4">
      <p><%= link_to "Edit this Restaurant", edit_restaurant_path(@restaurant) %></p>
      <p><%= link_to "Delete this Restaurant", restaurant_path(@restaurant), method: :delete %></p>
      <p><%= link_to "Add A Review", new_restaurant_review_path(@restaurant) %></p>
      <p><%= link_to "Back to Home", restaurants_path %></p>
     </div>
   </div>
  </div>
</div>


