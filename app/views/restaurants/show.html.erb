<h2><%= @restaurant.name %></h2>

<p>Cuisine</p>
<p><%= @restaurant.category %></p>

<p>Address</p>
<p><%= @restaurant.address %></p>

<p>Phone Number</p>
<p><%= @restaurant.phone_number %></p>

<p>Reviews for <%= @restaurant.name %></p>
<% @restaurant.reviews.each do |review| %>
<p><%= review.content %></p>
<p><%= review.rating %></p>
<% end %>

<p><%= link_to "Edit this Restaurant", edit_restaurant_path(@restaurant) %></p>
<p><%= link_to "Delete this Restaurant", restaurant_path(@restaurant), method: :delete %></p>
<p><%= link_to "Add A Review", new_restaurant_review_path(@restaurant) %></p>
<p><%= link_to "Back to Home", restaurants_path %></p>

